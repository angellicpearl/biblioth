{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ livre.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ livre.titre }}</td>
        </tr>
        <tr>
            <th>ISBN</th>
            <td>{{ livre.ISBN }}</td>
        </tr>
        <tr>
            <th>Disponible</th>
            <td>{{ livre.disponible ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Auteur</th>
            <td>{{ livre.auteur ? livre.auteur.nom : 'Auteur inconnu' }}</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>{{ livre.genre ? livre.genre.nom : 'Genre inconnu' }}</td>
        </tr>
    </tbody>
</table>


    <a href="{{ path('app_livre_index') }}">back to list</a>

    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
